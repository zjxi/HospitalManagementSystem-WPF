        <Label Content=" 挂 号 费：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="358,157,0,0"/>
        <TextBox Name="txtSprice"  HorizontalAlignment="Left" Height="23" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Margin="428,159,0,0"/>
